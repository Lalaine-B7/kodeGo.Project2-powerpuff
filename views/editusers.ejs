<!DOCTYPE html>
<html lang="en"> 
<head>
    <title>Cars.User.Edit - Kodego</title>
    
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- FontAwesome JS-->
    <script defer src="/plugins/fontawesome/js/all.min.js"></script>
    
    <!-- App CSS -->  
    <link id="theme-style" rel="stylesheet" href="/css/portal.css">

    <link id="theme-style" rel="stylesheet" href="/css/cars.css">
</head> 

<body class="app">   	
    <%- include('partials/sidepanel.ejs') %>    
    <div class="app-wrapper">
	    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
                <div class="heading">
                    <h1 class="app-page-title"><%=header%></h1>
                </div>
			    
                
                <div class="row g-4 settings-section">
	                <div class="col-12 col-md-12">
		                <div class="app-card app-card-settings shadow-sm p-4">
						    
						    <div class="app-card-body">
							    <form class="settings-form" action="/usave" method="post" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="setting-input-1" class="form-label">userId</label>
                                        <input required type="number" class="form-control" id="userId" name="userId" value="<%= users.userId%>" disabled>
                                    </div>
									<div class="mb-3">
									    <label for="setting-input-1" class="form-label">Picture</label>
										<div class="car-placeholder mb-3">
											<img src="/uploads/<%= users.picture%>" />
											<input type="hidden" name="OLDIMAGE" value="<%= users.picture%>" />
										</div>
									    <input type="file" class="form-control" name="IMAGE" value="<%= users.picture%>" />
									</div>
								    <div class="mb-3">
									    <label for="setting-input-1" class="form-label">First Name</label>
									    <input type="text" class="form-control" id="setting-input-1" name="first_name" value="<%= users.first_name%>" required="">
									</div>
									<div class="mb-3">
									    <label for="setting-input-2" class="form-label">Last Name</label>
									    <input type="text" class="form-control" id="setting-input-2" name="last_name" value="<%= users.last_name%>" required="">
									</div>
								    <div class="mb-3">
									    <label for="setting-input-3" class="form-label">Email</label>
									    <input type="text" class="form-control" id="setting-input-3" name="email" value="<%= users.email%>" required="">
									</div>
                                    <div class="mb-3">
									    <label for="setting-input-3" class="form-label">Birthday</label>
									    <input type="text" class="form-control " id="setting-input-4" name="birthday" placeholder="yyyy-mm-dd" value="<%= users.birthday%>" required="">
									</div>
                                    <div class="mb-3">
									    <label for="setting-input-3" class="form-label">Country</label>
									    <input type="text" class="form-control" id="setting-input-5" name="country" value="<%= users.country%>" required="">
									</div>
                                    <div class="mb-3">
									    <label for="setting-input-3" class="form-label">Position</label>
									    <input type="text" class="form-control" id="setting-input-6" name="position" value="<%= users.position%>" required="">
									</div>
                                   
									<button type="submit" class="btn app-btn-primary">Save Changes</button>
							    </form>
						    </div><!--//app-card-body-->
						    
						</div><!--//app-card-->
	                </div>
                </div>
		    </div><!--//container-fluid-->
	    </div><!--//app-content-->    
    </div><!--//app-wrapper-->    					
 
    <!-- Javascript -->          
    <script src="/plugins/popper.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>

	<script src="js/app.js"></script> 
</body>
</html>