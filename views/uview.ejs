<!DOCTYPE html>
<html lang="en"> 
<head>
    <title>User.View - Kodego</title>
    
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- FontAwesome JS-->
    <script defer src="/plugins/fontawesome/js/all.min.js"></script>
    
    <!-- App CSS -->  
    <link id="theme-style" rel="stylesheet" href="/css/portal.css">

    <link id="theme-style" rel="stylesheet" href="/css/cars.css">
</head> 

<body class="app">   	
    <%- include('partials/sidepanel.ejs') %>    
    <div class="app-wrapper">
	    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
                <div class="heading">
                    <h1 class="app-page-title"><%=header%></h1>
                </div>
			    
                
				<div class="row g-4 settings-section">
	                <div class="col-12 col-md-4">
						<div class="user-placeholder mb-3">
							<img src="/uploads/<%= users.picture%>" />
			
						</div>
	                </div>
	                <div class="col-12 col-md-8">
		                <div class="app-card app-card-settings shadow-sm p-4">
						    
						    <div class="app-card-body">
										<div class="mb-3">
											<label class="form-label">User #</label>
											<div><%= users.userId%></div>
										</div>
										<div class="mb-3">
											<label class="form-label">Full Name</label>
											<div><%= users.first_name%> <%= users.last_name%></div>
										</div>
										<div class="mb-3">
											<label class="form-label">Email</label>
											<div><%= users.email%></div>
										</div>
										<div class="mb-3">
											<label class="form-label">Birthday</label>
											<div><%= users.birthday%></div>
										</div>
										<div class="mb-3">
											<label class="form-label">Country</label>
											<div><%= users.country%></div>
										</div>
										<div class="mb-3">
											<label class="form-label">Position</label>
											<div><%= users.position%></div>
										</div>
						    </div><!--//app-card-body-->
						    
						</div><!--//app-card-->
	                </div>
                </div>

		    </div><!--//container-fluid-->
	    </div><!--//app-content-->    
    </div><!--//app-wrapper-->    					
 
    <!-- Javascript -->          
    <script src="/plugins/popper.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>

	<script src="/js/app.js"></script>
</body>
</html>